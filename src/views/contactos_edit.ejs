<%- include ('partials/_header') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card-body">
                <form action="/update/<%= data.id %>" method="post">
                    <div class="form-group">
                        <input type="text" name="nombre" value="<%= data.nombre %>" class="form-control">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="text" name="apellidos" value="<%= data.apellidos %>" class="form-control">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="text" name="correo" value="<%= data.correo %>"class="form-control">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="date" name="fecha" value="<%= data.fecha %>" class="form-control">
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="text" name="foto" value="<%= data.foto %>" class="form-control">
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary"> Editar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include ('partials/_footer') %>